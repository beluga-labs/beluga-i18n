{
	"name": "beluga-i18n",
	"description": "A package for internationalization support in NextJS apps and beluga stack.",
	"version": "1.0.1",
	"changelog": {
		"1.0.1": [
			"Added missing files like license and contributing"
		],
		"1.0.0": [
			"Added html parsing option to useTranslation hook",
			"Improved missing translation key handling with automatic fallback",
			"Added comprehensive README documentation"
		],
		"0.2.1": [
			"Added reloadKey prop to TranslationsProvider for controlled reloading"
		]
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsup",
		"test": "cd test && pnpm test",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"format-watch": "onchange \"**/*.{ts,tsx,md}\" -- prettier --write --ignore-unknown {{changed}}"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/beluga-labs/beluga-i18n"
	},
	"keywords": [
		"i18n",
		"internationalization",
		"translations",
		"nextjs",
		"beluga"
	],
	"bugs": {
		"url": "https://github.com/beluga-labs/beluga-i18n/issues"
	},
	"homepage": "https://github.com/beluga-labs/beluga-i18n#readme",
	"author": "beluga â€“ Daniel Baumert",
	"license": "MIT",
	"files": [
		"dist"
	],
	"devDependencies": {
		"prettier": "^3.6.2",
		"tsup": "^8.5.0",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"html-react-parser": "^5.2.5",
		"react": "^19.1.0"
	}
}
